@model ReadersClubCore.Models.Channel
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-3" dir="rtl">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
            <h3 class="fw-bold mb-4 text-center">تفاصيل القناه</h3>

            <div class="row mb-3">
                <div class="col-md-4 text-center">
                    @if (string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="~/Uploads/ChannelsImages/welcome-image.jpeg" alt="صورة القناه" class="img-thumbnail rounded-circle shadow" style="width: 150px; height: 150px;" />
                    }
                    else
                    {
                        <img src="~/Uploads/ChannelsImages/@Model.Image" alt="صورة القناه" class="img-thumbnail rounded-circle shadow" style="width: 150px; height: 150px;" />
                    }
                    <p class="mt-2 text-muted">@Model.Name</p>
                </div>

                <div class="col-md-8 pt-3">
                    <dl class="row">

                        <dt class="col-sm-4 fw-bold text-secondary">اسم المستخدم</dt>
                        <dd class="col-sm-8">@Model.User.UserName</dd>
                        <dt class="col-sm-4 fw-bold text-secondary">وصف القناه</dt>
                        @if (string.IsNullOrEmpty(Model.Description))
                        {
                            <dd class="col-sm-8">لا يوجد وصف للقناه</dd>
                        }
                        else
                        {
                            <dd class="col-sm-8">@Model.Description</dd>
                        }
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="EditChannel" asp-route-id="@Model.Id" class="btn btn-outline-primary px-4">
                    <i class="fas fa-edit"></i> تعديل
                </a>
                @if (User.IsInRole("admin"))
                {
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left"></i> العودة إلى القائمة
                    </a>
                }
                else
                {
                    <a asp-action="AuthorChannels" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left"></i> العودة إلى القائمة
                    </a>
                }
            </div>

        </div>
    </div>
</div>
