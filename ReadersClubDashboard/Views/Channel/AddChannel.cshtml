@model ReadersClubCore.Models.Channel

<div class="container mt-3" dir="rtl">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
<h1 >إضافة قناة</h1>
<form class="row g-3 needs-validation flex-column p-3 mt-3 border-1 rounded" enctype="multipart/form-data" asp-controller="Channel" asp-action="AddChannel" method="post" novalidate>
  <div>
    <label for="validationCustom01" class="form-label">اسم القناة</label>
    <input type="text" class="form-control rounded-3 shadow-sm" id="validationCustom01" asp-for="Name" value="" required placeholder="ادخل اسم القناة">
    <span asp-validation-for="Name"></span>
  </div>
    <div >
        <label asp-for="UserId" class="form-label">اسم المستخدم</label>
        <select asp-for="UserId" class="form-control shadow-sm rounded-3"
                asp-items="@(new SelectList(ViewData["Users"] as List<ReadersClubCore.Models.ApplicationUser>, "Id", "UserName"))">
            <option value="0">اختر اسم المستخدم</option>
        </select>
    </div>
  <div>
    <label for="validationCustom02" class="form-label">وصف القناة</label>
     <textarea type="text" class="form-control rounded-3 shadow-sm" id="validationCustom02" asp-for="Description" value="" required>ادخل وصف القناة ... </textarea>
    <span asp-validation-for="Description"></span>
  </div>
  <div>
    <label for="validationCustomUsername" class="form-label">صورة القناة</label>
    <input type="file" class="form-control rounded-3 shadow-sm" id="validationCustomUsername" name="imageFile" aria-describedby="inputGroupPrepend">
  </div>
 <div class="d-flex justify-content-between">
     <button type="submit" class="btn btn-primary px-4">
         <i class="fas fa-user-plus"></i> إضافة
     </button>
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="fas fa-arrow-left"></i> العودة إلى القائمة
                        </a>
                    }
                    else
                    {
                        <a asp-action="AuthorChannels" class="btn btn-secondary px-4">
                            <i class="fas fa-arrow-left"></i> العودة إلى القائمة
                        </a>
                    }
 </div>
</form>
</div>
</div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
