@model ReadersClubCore.Models.Channel

<div class="container mt-3" dir="rtl">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
<h1 class="alert alert-secondary text-center">تعديل قناة @Model.Name</h1>
<form class="row g-3 flex-column p-3 mt-3 border-1 rounded" enctype="multipart/form-data" asp-controller="Channel" asp-action="EditChannel" method="post">
    <div>
        <label for="validationCustom01" class="form-label">اسم القناة</label>
        <input type="text" class="form-control" id="validationCustom01" asp-for="Name" value="@Model.Name" required placeholder="ادخل اسم القناة">
    </div>
                <div>
                    <input type="hidden"  asp-for="Image" >
                </div>
    <div>
        <label for="validationCustom02" class="form-label">وصف القناة</label>
        <textarea type="text" class="form-control" id="validationCustom02" asp-for="Description" value="@Model.Description" required>ادخل وصف القناة ... </textarea>
    </div>
                <div>
                    <label asp-for="UserId" class="form-label">اسم المستخدم</label>
                    <select asp-for="UserId" class="form-control shadow-sm rounded-3"
                            asp-items="@(new SelectList(ViewData["Users"] as List<ReadersClubCore.Models.ApplicationUser>, "Id", "UserName"))">
                        <option value="0">اختر اسم المستخدم</option>
                    </select>
                </div>
                <div>
        <label for="validationCustomUsername" class="form-label">صورة القناة</label>
        <input type="file" class="form-control" id="validationCustomUsername" name="imageFile" aria-describedby="inputGroupPrepend" >
    </div>
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-edit"></i> تعديل
                    </button>
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="fas fa-arrow-left"></i> العودة إلى القائمة
                        </a>
                    }
                    else
                    {
                        <a asp-action="AuthorChannels" class="btn btn-secondary px-4">
                            <i class="fas fa-arrow-left"></i> العودة إلى القائمة
                        </a>
                    }
                </div>
            </form>
</div>
</div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
