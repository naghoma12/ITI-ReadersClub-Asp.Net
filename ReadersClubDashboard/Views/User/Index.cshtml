@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-1" dir="rtl">
    <div class="mb-3 text-start">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle p-2"></i> إضافة مستخدم 
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.Id)</th>
                    <th>@Html.DisplayNameFor(x => x.Name)</th>
                    <th>@Html.DisplayNameFor(x => x.UserName)</th>
                    <th>@Html.DisplayNameFor(x => x.Email)</th>
                    <th>@Html.DisplayNameFor(x => x.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(x => x.Image)</th>
                    <th>الصلاحيات</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach(var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.UserName</td>
                        <td>
                        @if (!string.IsNullOrEmpty(user.Email))
                        {
                            @user.Email
                        }
                        else
                        {
                            <span>لا يوجد بريد إلكتروني</span>
                        }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(user.PhoneNumber))
                            {
                                @user.PhoneNumber
                            }
                            else
                            {
                                <span>لا يوجد رقم تليفون</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(user.Image))
                            {
                                <img src="/Uploads/Users/@user.Image" width="50" height="50" alt="صورة المستخدم" />
                            }
                            else
                            {
                                <span>لا توجد صورة</span>
                            }
                        </td>
                        <td>
                            @string.Join(",", user.Roles.ToList())
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i> تفاصيل
                            </a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> تعديل
                            </a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> حذف
                            </a>
                        </td>

                    </tr>
                }
              
            </tbody>
        </table>
    </div>
</div>

